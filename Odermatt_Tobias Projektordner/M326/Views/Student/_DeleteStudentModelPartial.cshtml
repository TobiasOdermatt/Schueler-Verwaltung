@model Student
 <div class="modal fade" id="deleteStudent" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title text-danger">Schüler löschen</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Schliessen"></button>
      </div>
      <div class="modal-body">
  <form asp-action="deleteStudentConfirmed" method="get">
  <input asp-for="ID" type="hidden" />
        <div class="card-body">
            <h4 class="text-danger">Möchten Sie diesen Schüler löschen?</h4>
            <div class="card">
  <div class="card-body">
    <h5 class="card-title">@ViewBag.Student.firstname @ViewBag.Student.lastname</h5>
                <address>
                    @ViewBag.Student.street <br>
                    @ViewBag.Student.plz @ViewBag.Student.city<br><br />

                        <h6 class="card-subtitle mb-2 text-muted">Geboren:@{string birthday = ViewBag.Student.birthday.ToString();
                //Zeigt das Geburtsdatum an, für die Darstellung werden die letzten 8 Zeichen (Sekunden : Minute : Stunden) entfernt
                        <td>@{ birthday = birthday.Remove(birthday.ToString().Length - 8);}
                        @birthday</td>}</h6>
                    </address>
  </div>
</div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
        <button type="submit" class="btn btn-danger">Löschen</button>
      </div>
      </form>
    </div>
  </div>
</div>
