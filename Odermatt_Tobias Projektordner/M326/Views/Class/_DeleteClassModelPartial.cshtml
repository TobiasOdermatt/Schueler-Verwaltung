@model Class
 <div class="modal fade" id="deleteClass" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">Klasse löschen</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Schliessen"></button>
      </div>
      <div class="modal-body">
    <form asp-action="deleteClass" method="post">
       <div class="form-group">
            <h4 class="text-danger">Möchten Sie diese Klasse löschen?</h4>
           <input asp-for="ID" type="hidden" />
           <div class="row">
               <div class="col form-group">
                 <input asp-for="name" readonly placeholder="Klassennamen *" class="form-control" maxlength="50" required/>
               </div></div>
               <br />
               <div class="row">
               <div class="col form-group">
                 <input asp-for="teacherName" readonly placeholder="Klassenlehrer *" class="form-control" maxlength="25" required/>
               </div>    </div> 
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
        <button type="submit" class="btn btn-danger">Löschen</button>
      </div>
      </form>
    </div>
  </div>
</div>
   </div> 